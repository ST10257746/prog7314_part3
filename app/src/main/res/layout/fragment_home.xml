<?xml version="1.0" encoding="utf-8"?>
<!-- Modern Fitness Dashboard Layout -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/good_morning"
                    android:textColor="@color/Text"
                    android:textSize="18sp"
                    android:alpha="0.8" />

                <TextView
                    android:id="@+id/userGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User"
                    android:textColor="@color/Text"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Profile Icon with Badge -->
            <FrameLayout
                android:id="@+id/profileIconContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/icon_default_profile"
                    android:background="@drawable/bg_card"
                    android:padding="4dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Profile" />

                <!-- Notification Badge -->
                <View
                    android:id="@+id/profileBadge"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="@color/Accent"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>

        <!-- Central Dashboard Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <!-- Large Steps Display -->
            <TextView
                android:id="@+id/mainStepsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/Primary"
                android:textStyle="bold"
                android:textSize="50sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps_today"
                android:textColor="@color/Text"
                android:textSize="18sp"
                android:alpha="0.8"
                android:layout_marginBottom="16dp" />

            <!-- Supporting Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/caloriesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/Secondary"
                        android:textStyle="bold"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calories"
                        android:textColor="@color/Text"
                        android:textSize="14sp"
                        android:alpha="0.7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/activeMinutesValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/Accent"
                        android:textStyle="bold"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active_min"
                        android:textColor="@color/Text"
                        android:textSize="14sp"
                        android:alpha="0.7" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/distanceValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/Primary"
                        android:textStyle="bold"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distance_km"
                        android:textColor="@color/Text"
                        android:textSize="14sp"
                        android:alpha="0.7" />

                </LinearLayout>

            </LinearLayout>

            <!-- Circular Progress Rings Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <!-- Steps Ring -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <!-- Background Circle -->
                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_progress_background" />

                        <!-- Progress Circle -->
                        <View
                            android:id="@+id/stepsProgressCircle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_progress_steps" />

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_home"
                            android:contentDescription="Steps" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/steps"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/stepsProgressText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/Primary"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/stepsGoalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/10,000"
                            android:textColor="@color/Text"
                            android:textSize="14sp"
                            android:alpha="0.7" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Calories Ring -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <!-- Background Circle -->
                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_progress_background" />

                        <!-- Progress Circle -->
                        <View
                            android:id="@+id/caloriesProgressCircle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_progress_calories" />

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_workout"
                            android:contentDescription="Calories" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/calories_label"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/caloriesProgressText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/Secondary"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/caloriesGoalText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/2,000"
                            android:textColor="@color/Text"
                            android:textSize="14sp"
                            android:alpha="0.7" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Heart Points Ring (hidden - not backed by live data) -->
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp">

                        <!-- Background Circle -->
                        <View
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_progress_background" />

                        <!-- Progress Circle -->
                        <View
                            android:id="@+id/heartProgressCircle"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:background="@drawable/circular_progress_heart" />

                        <!-- Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/icon_progress"
                            android:contentDescription="Heart Points" />

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Heart Pts"
                        android:textColor="@color/Text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="90%"
                        android:textColor="@color/Accent"
                        android:textStyle="bold"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Weekly Target Tracker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weekly_target"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/weeklyTargetText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0 of 0 steps"
                    android:textColor="@color/Text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/weeklyTargetPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textColor="@color/Primary"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>

            <ProgressBar
                android:id="@+id/weeklyTargetProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="0"
                android:max="100"
                android:progressTint="@color/Primary"
                android:backgroundTint="@color/Background" />

        </LinearLayout>

        <!-- Daily Goal Checkmarks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/this_weeks_goals"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <!-- Days of the week -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- Monday -->
                <LinearLayout
                    android:id="@+id/mondayContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mondayCheckmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textColor="@color/Text"
                        android:textSize="22sp"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/monday"
                        android:textColor="@color/Text"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Tuesday -->
                <LinearLayout
                    android:id="@+id/tuesdayContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tuesdayCheckmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textColor="@color/Text"
                        android:textSize="22sp"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tuesday"
                        android:textColor="@color/Text"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Wednesday -->
                <LinearLayout
                    android:id="@+id/wednesdayContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/wednesdayCheckmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textColor="@color/Text"
                        android:textSize="22sp"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wednesday"
                        android:textColor="@color/Text"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Thursday -->
                <LinearLayout
                    android:id="@+id/thursdayContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/thursdayCheckmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textColor="@color/Text"
                        android:textSize="22sp"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/thursday"
                        android:textColor="@color/Text"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Friday -->
                <LinearLayout
                    android:id="@+id/fridayContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/fridayCheckmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textColor="@color/Text"
                        android:textSize="22sp"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/friday"
                        android:textColor="@color/Text"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Saturday -->
                <LinearLayout
                    android:id="@+id/saturdayContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/saturdayCheckmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textColor="@color/Text"
                        android:textSize="22sp"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/saturday"
                        android:textColor="@color/Text"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- Sunday -->
                <LinearLayout
                    android:id="@+id/sundayContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/sundayCheckmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="○"
                        android:textColor="@color/Text"
                        android:textSize="22sp"
                        android:alpha="0.5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sunday"
                        android:textColor="@color/Text"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Goals To-Do List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/goals_todo_list"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <!-- Goals List Container (Dynamic) -->
            <LinearLayout
                android:id="@+id/goalsListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Empty State -->
            <TextView
                android:id="@+id/goalsEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_goals_today"
                android:textColor="@color/Text"
                android:textSize="14sp"
                android:alpha="0.7"
                android:gravity="center"
                android:padding="16dp"
                android:visibility="gone" />

            <!-- Add New Goal Button -->
            <Button
                android:id="@+id/addGoalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_goal"
                android:backgroundTint="@color/Primary"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp" />

        </LinearLayout>

        <!-- Progress Graph Placeholder -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/bg_card"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weekly_progress"
                android:textColor="@color/Text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="16dp" />

            <!-- Weekly Progress Chart -->
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/weeklyStepsChart"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <!-- Chart Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/daily_step_count_past_7_days"
                android:textColor="@color/Text"
                android:textSize="14sp"
                android:alpha="0.8"
                android:layout_marginTop="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
